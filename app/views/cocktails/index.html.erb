<div class="container">
  <div class="text-center">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" id="img" style="background-image: linear-gradient(rgba(255,255,255,0.3), rgba(255,255,255,0.2)), url('https://source.unsplash.com/600x600/?cocktail, beverages, <%= cocktail.name %>');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            <h6><%= cocktail.content %></h6>
          </div>
          <%= link_to "", cocktail_path(cocktail.id), class: "card-link"  %>
          <!-- <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
        </div>
      </div>
      <% end %>
      <!-- insert <div class="card"> -->
      </div>
    </div>
  </div>











