<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= dose.description %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= dose.ingredient.name %></h6>
    <p class="card-text">Description</p>
     <%= link_to dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } do %><i class="far fa-trash-alt"></i>
      <% end %>
        </div>
      </div>
    <% end %>




<%= link_to "Add new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-info" %>
